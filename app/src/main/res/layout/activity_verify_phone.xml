<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="androides.stayquiet.VerifyPhoneActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            style="@style/textHight"
            android:id="@+id/tvTitle"
            android:layout_marginTop="20dp"
            android:text="@string/text_activity_verify_phone_1"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
            android:background="@drawable/layout_border"
            android:layout_height="50dp"
            style="@style/element"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginTop="15dp"
            android:id="@+id/lyCode">

            <TextView
                android:gravity="center_vertical"
                style="@style/textNormal"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="@string/text_code"
                android:textColor="@color/colorGrayH"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:id="@+id/tvCode"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_remove_circle"
                android:inputType="phone"
                app:layout_constraintRight_toRightOf="@+id/tvCode"
                android:id="@+id/etCode"
                android:hint="123456"/>
        </RelativeLayout>

        <Button
            style="@style/element"
            android:layout_height="50dp"
            android:text="@string/btn_verify"
            android:background="@drawable/layout_border_blue"
            app:layout_constraintTop_toBottomOf="@+id/lyCode"
            android:layout_marginTop="15dp"
            android:id="@+id/btnVerify"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>