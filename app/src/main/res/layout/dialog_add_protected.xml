<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAddProtected"
        style="@style/textHight"
        android:layout_marginTop="20dp"
        android:text="@string/text_add_protected"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="parent"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lyUsername"
        style="@style/element"
        android:layout_marginTop="15dp"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/tvAddProtected">

        <EditText
            android:id="@+id/etUsername"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:drawableStart="@drawable/ic_username_black"
            android:drawablePadding="10dp"
            android:hint="@string/text_username"
            android:imeOptions="actionNext"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>