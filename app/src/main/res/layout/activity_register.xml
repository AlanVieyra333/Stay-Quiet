<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="androides.stayquiet.RegisterActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        style="@style/element"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Bienvenido "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorAccent"
        android:textColorLink="@color/colorAccent"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etRegister_FirstName"
        style="@style/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_weight="0.05"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etRegister_email"
        style="@style/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_weight="0.05"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/etRegister_FirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/etRegister_phoneNumber"
        style="@style/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_weight="0.05"
        android:ems="10"
        android:hint="Numero celular"
        android:inputType="phone"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/etRegister_email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etRegister_password"
        style="@style/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_weight="0.05"
        android:ems="10"
        android:hint="contraseÃ±a"
        android:inputType=""
        android:layout_marginTop="21dp"
        android:layout_below="@+id/etRegister_phoneNumber"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btnRegister_save"
        style="@style/element"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="@android:color/background_light"
        android:text="Registrar"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/etRegister_phoneNumber"
        android:layout_marginBottom="70dp" />
</RelativeLayout>