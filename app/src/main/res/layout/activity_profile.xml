<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androides.stayquiet.ProfileActivity">

    <TextView
        style="@style/textHight"
        android:id="@+id/tvTitle"
        android:layout_marginTop="20dp"
        android:text="@string/activity_profile_text_1"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout style="@style/divider"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:id="@+id/linearLayout"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/imageProfile"
        android:layout_width="121dp"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:src="@drawable/boy"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginEnd="8dp" />

    <RelativeLayout
        android:background="@drawable/layout_border"
        android:layout_height="50dp"
        style="@style/element"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile"
        android:layout_marginTop="15dp"
        android:id="@+id/lyName">

        <TextView
            android:gravity="center_vertical"
            style="@style/textNormal"
            android:id="@+id/tvName"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/text_name"
            android:textColor="@color/colorGrayH"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_remove_circle"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="@+id/tvName" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/layout_border"
        android:layout_height="50dp"
        style="@style/element"
        app:layout_constraintTop_toBottomOf="@+id/lyName"
        android:layout_marginTop="10dp"
        android:id="@+id/lyLastName">

        <TextView
            android:gravity="center_vertical"
            style="@style/textNormal"
            android:id="@+id/tvLastName"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/text_lastName"
            android:textColor="@color/colorGrayH"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_remove_circle"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="@+id/tvLastName" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/layout_border"
        android:layout_height="50dp"
        style="@style/element"
        app:layout_constraintTop_toBottomOf="@+id/lyLastName"
        android:layout_marginTop="10dp"
        android:id="@+id/lyEmail">

        <TextView
            android:gravity="center_vertical"
            style="@style/textNormal"
            android:id="@+id/tvEmail"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/text_email"
            android:textColor="@color/colorGrayH"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_remove_circle"
            android:inputType="textEmailAddress"
            app:layout_constraintRight_toRightOf="@+id/tvEmail" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/layout_border"
        android:layout_height="50dp"
        style="@style/element"
        app:layout_constraintTop_toBottomOf="@+id/lyEmail"
        android:layout_marginTop="10dp"
        android:id="@+id/lyEmailConf">

        <TextView
            android:gravity="center_vertical"
            style="@style/textNormal"
            android:id="@+id/tvEmailConf"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/text_email_confirmation"
            android:textColor="@color/colorGrayH"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" />

        <EditText
            android:id="@+id/etEmailConf"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_remove_circle"
            android:inputType="textEmailAddress"
            app:layout_constraintRight_toRightOf="@+id/tvEmailConf" />
    </RelativeLayout>

    <Button
        style="@style/element"
        android:layout_height="50dp"
        android:text="@string/btn_save"
        android:background="@drawable/layout_border_blue"
        app:layout_constraintTop_toBottomOf="@+id/lyEmailConf"
        android:layout_marginTop="15dp"/>

</android.support.constraint.ConstraintLayout>
